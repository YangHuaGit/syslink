<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tongyuan.model.dao.UserPermissionMapper">

    <resultMap id="mapResultMap" type="map">
        <id column="user_id" property="userId" jdbcType="BIGINT"  />
        <result column="permissions" property="permissions" jdbcType="VARCHAR"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="baseColumnList" >
        userId,create_date,permissions
    </sql>
    <insert id="add"  parameterType="map"   >
        INSERT INTO user_permission (user_id, create_date) VALUES
        (#{userId}, #{createDate})
    </insert>
    <update id="update"  parameterType="map">
        UPDATE user_permission SET roles=#{roles}
        WHERE user_id=#{userId}
    </update>
    <select id="query" resultMap="mapResultMap" resultType="map" parameterType="map">
        SELECT
        <include refid="baseColumnList" />
        FROM user_permission
        WHERE user_id = #{userId}
    </select>
    <delete id="delete" parameterType="long">
        delete from user_permission where user_id=#{userId}
    </delete>
</mapper>