<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tongyuan.model.dao.PermissionGroupMapper">
    <resultMap id="baseResultMap" type="com.tongyuan.model.domain.PermissionGroup">
        <id column="id" property="id" jdbcType="BIGINT"  />
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
    </resultMap>
    <resultMap id="mapResultMap" type="map">
        <id column="id" property="id" jdbcType="BIGINT"  />
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="baseColumnList" >
        id,name,create_date,description,url
    </sql>
    <insert id="add"  parameterType="com.tongyuan.model.domain.PermissionGroup">
        INSERT INTO permission_group (name,url, create_date,description) VALUES
        (#{name},#{url}, #{createDate}, #{description})
    </insert>
    <update id="update"  parameterType="com.tongyuan.model.domain.PermissionGroup">
        UPDATE permission_group SET name=#{name},description=#{description},url=#{url}
        WHERE id=#{id}
    </update>
    <select id="query" resultMap="mapResultMap" resultType="map">
        SELECT
        <include refid="baseColumnList" />
        FROM permission_group
        WHERE 1=1
    </select>

    <delete id="delete" parameterType="long">
        delete from permission_group where id=#{id}
    </delete>




</mapper>